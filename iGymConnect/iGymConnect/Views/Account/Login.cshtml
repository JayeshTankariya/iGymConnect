@model BusinessLogic.ObjectModel.OMUser
@{
    ViewBag.Title = "Login";
    Layout = null;
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetUser</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color:lightgray">

    <nav class="navbar navbar-default" style="background-color:darkslateblue">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">IGym Connect
                </a>
            </div>
        </div>
    </nav>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form Horizontal" }))
        {
            //*********Login*********//
            <div class="form-group">
                <div class="col-sm-10" align="center">
                    <img src="~/Images/l2.png" height="200" width="370" />
                </div>
                    <div class="col-sm-5 col-lg-offset-4">
                            <label class="glyphicon glyphicon-user">
                                UserName 
                                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Email" })
                            </label>
                    </div>
                    <div class="col-sm-5 col-lg-offset-4">
                            <label class="glyphicon glyphicon-user">
                                Password
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                            </label>
                    </div>
                    <div class="col-sm-5 col-lg-offset-4">
                            <button type="submit" class="btn btn-primary">Log in</button>
                            <button type="reset" class="btn btn-primary">Clear</button>
                    </div>
            </div>
        } 
 
    </body>
</html>
