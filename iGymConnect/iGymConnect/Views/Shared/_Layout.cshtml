                            <li>@Html.ActionLink("CHECK-IN", "CheckIn", "CheckIn", null, new { @class = "btn" })</li>
                            <li>@Html.ActionLink("REPORTS", "Reports", "Reports", null, new { @class = "btn" })</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@("Welcome  " + ((BusinessLogic.ObjectModel.OMUser)Session["UserLogin"]).FirstName) <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li data-toggle="modal" data-target="#Updateprofile"><a href="#">UPDATE PROFILE</a></li>
                                    <li data-toggle="modal" data-target="#Changepwd"><a href="#">CHANGE PASSWORD</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li>@Html.ActionLink("LOGOUT", "Login", "Account", null, new { @class = "btn-default" })</li>
                                    @*<li><a href="#">One more separated link</a></li>*@
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
